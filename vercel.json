{
    "version": 2,
    "builds": [
      {
        "src": "src/app.js", 
        "use": "@vercel/node" 
      },
      {
        "src": "./package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "routes": [
        {
          "src": "/api/auth/login",
          "dest": "src/controllers/authController.js"
        },
        {
          "src": "/api/profile",
          "dest": "src/controllers/profileController.js"
        },
        {
          "src": "/api/form",
          "dest": "src/controllers/formController.js"
        },
        {
          "src": "/api/contacts",
          "dest": "src/controllers/contactsController.js"
        },
        {
          "src": "/api/(.*)",
          "dest": "/$1"
        },
        {
          "src": "/(.*)",
          "dest": "/api/$1"
        }
      ]
    }